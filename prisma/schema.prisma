datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Streamer {
  id                String         @id
  login             String         @db.VarChar(50)
  profile_image_url String         @db.VarChar(3000)
  subscriptions     Subscription[]
  streams           Stream[]

  @@map(name: "streamers")
}

model Subscription {
  id          String   @id @db.VarChar(25)
  type        String   @db.VarChar(255)
  streamer    Streamer @relation(fields: [streamer_id], references: [id])
  streamer_id String

  @@map(name: "subscriptions")
}

model Stream {
  id           String   @id @db.VarChar(25)
  title        String
  viewer_count Int      @default(0)
  game_name    String
  started_at   DateTime @db.Timestamptz
  ended_at     DateTime @db.Timestamptz
  streamer     Streamer @relation(fields: [streamer_id], references: [id])
  streamer_id  String

  @@map(name: "streams")
}
