generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model streamers {
  id                String          @id
  login             String
  profile_image_url String
  streams           streams[]
  subscriptions     subscriptions[]
}

model streams {
  id            String          @id
  title         String?
  view_count    BigInt?
  game_name     String?
  started_at    DateTime?       @db.Timestamptz(6)
  ended_at      DateTime?       @db.Timestamptz(6)
  streamer_id   String
  streamer      streamers       @relation(fields: [streamer_id], references: [id])
  notifications notifications[]
}

model subscriptions {
  id          String    @id
  type        String
  streamer_id String
  streamer    streamers @relation(fields: [streamer_id], references: [id])
}

model notifications {
  id         String  @id(map: "primary") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  channel_id String
  message_ts String
  stream_id  String
  stream     streams @relation(fields: [stream_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}
